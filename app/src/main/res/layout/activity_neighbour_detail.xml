<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:backgroundTint="#ECECEC"
    android:orientation="vertical"
    tools:context=".ui.neighbour_list.NeighbourDetailActivity">


    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="350dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/profil"
        app:srcCompat="@drawable/ic_launcher_background" />


    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="@string/buttonback" />

    <TextView
        android:id="@+id/nameProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="227dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_neighbour_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@+id/image_avatar"
        app:layout_constraintVertical_bias="0.18">

        <TextView
            android:id="@+id/activity_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/ic_location_on_black_24dp"
            android:contentDescription="Location" />

        <TextView
            android:id="@+id/activity_adresse_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="8dp"
            android:text="@string/saint_pierre_du_mont_5km" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="84dp"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            android:contentDescription="Phone" />

        <TextView
            android:id="@+id/activity_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="8dp"
            android:text="@string/_33_6_86_57_90_14" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/ic_language_black_24dp"
            android:contentDescription="Mail" />

        <TextView
            android:id="@+id/activity_mail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="8dp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="8dp"
        android:minHeight="150dp">


        <TextView
            android:id="@+id/activity_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:text="@string/a_propos_de_moi"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_descri_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="17dp"
            android:text="@string/bonjour_je_souhaiterais_faire_de_la_marche_nordique_pas_initi_e_je_recherche_une_ou_plusieurs_personnes_susceptibles_de_m_accompagner_j_aime_les_jeux_de_cartes_tels_la_belote_et_le_tarot"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="280dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:tint="#FFEB3B"
        app:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/ic_star_border_black_24dp" />

</RelativeLayout>